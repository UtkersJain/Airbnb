<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            
            <h3>Edit Listing</h3>
            <br>
            <form method="post" action="/listings/<%=listing._id%>?_method=PUT">

                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="listing[title]" value="<%=listing.title%>" id="title"
                        class="form-control" />
                </div>

                <div class="mb-3">
                    <label for="desc" class="form-label">Description</label>
                    <textarea name="listing[description]" rows="5" cols="25" id="desc"
                        class="form-control"><%=listing.description%></textarea>
                </div>

                <div class="mb-3">
                    <label for="img" class="form-label">Image Link</label>
                    <input type="text" size="80" name="listing[image]" value="<%=listing.image%>" id="img"
                        class="form-control">
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input type="number" name="listing[price]" value="<%=listing.price%>" class="form-control"
                            id="price">
                    </div>
    
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" name="listing[country]" value="<%=listing.country%>" id="country"
                            class="form-control">
                    </div>

                </div>

                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" name="listing[location]" value="<%=listing.location%>" class="form-control"
                        id="location">
                </div>

                <button type="submit" class="btn btn-dark edit-btn mb-3">Edit</button>
            </form>
            
        </div>
    </div>